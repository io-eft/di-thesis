= form_for [course, @assignment] do |f|
  .panel
    %div{:class => ["input-group", "input-group-lg"]}
      %span{:class => ["input-group-addon"]} Title
      = f.text_field :title, class: "form-control"
  .panel
    %div{:class => ["input-group", "input-group-lg"]}
      %span{:class => ["input-group-addon"]} Description
      = f.text_area :description, class: "form-control"
  .panel
    %div{:class => ["input-group"]}
      %span{:class => ["input-group-addon"]} Due Date
      = f.date_select :due_date, class: "form-control"
  -if n
    #documents
      = f.fields_for :documents do |doc|
        = render 'document_fields', f: doc
      .links
        = link_to_add_association 'Add Document', f, :documents, class: "btn btn-info doc-button"
    %br
    = f.submit 'Create Assignment', class: "btn btn-success btn-block"
  -else
    %br
    = f.submit 'Edit Assignment', class: "btn btn-success btn-block"
