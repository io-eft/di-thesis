<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Documents</h3>
  </div>
  <div class="panel-body">
    <% documents.each do |doc| %>
      <div class="row" style="padding: 0 10px;">
        <div id='<%= "document_#{doc.id}" %>'>
          <%= best_in_place doc, :name, :url => course_assignment_document_path(@course, @assignment, doc) %>
          <span class="pull-right btn btn-danger bip-button"><%= link_to "Remove", course_assignment_document_path(@course, @assignment, doc), method: :delete,
          data: {confirm: "Remove #{doc.name}?"}, remote: true, style: "color: white;" %></span>
          <span class="pull-right"><%= link_to "Download  ", course_assignment_document_download_path(@course, @assignment, doc), style: "color: white;", class: "btn btn-info bip-button" %></span>
          <span class="pull-right"><%= link_to "View", doc.doc.url, style: "color: white;", class: "fancybox btn btn-info bip-button" %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="new_doc">
  <%= form_for @assignment.documents.build, url: course_assignment_add_document_path(@course, @assignment), remote: true do |f| %>
    <div class="col-md-4 doc-class">
      <div class="input-group">
        <span class="input-group-addon">Document Name</span>
          <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-md-4 doc-class">
      <%= f.file_field :doc %>
    </div>
    <%= submit_tag "Add Document", class: "btn btn-success col-md-2" %>
    <div class="btn btn-danger col-md-2">Cancel</div>
  <% end %>
</div>
