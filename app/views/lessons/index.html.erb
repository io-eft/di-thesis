<p id="notice"><%= notice %></p>

<h1>Manage Courses</h1>
<%= will_paginate @lessons %>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th style="text-align:right;">Lecturer</th>
    <th style="text-align:right;">Students</th>
  </tr>
  </thead>
  <tbody>
  <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.name, lesson %></td>
        <td style="text-align:right;"><%= @professors[lesson.id] %></td>
        <td style="text-align:right;"><%= lesson.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @products %>


<% if false %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td><%= link_to 'Show', lesson %></td>
          <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
          <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

  <br>

<%= link_to 'New Course', new_lesson_path, :class => "btn bnt-lg btn-success" %>
