<%= form_for [course, course.announcements.build], :html => {:id => "new_ann_form"}, remote: true do |f| %>
  <div class="panel">
    <div class="input-group input-group-lg">
      <span class="input-group-addon">Title</span>
      <%= f.text_field :title, class: "form-control", id: "new-ann-title" %>
    </div>
  </div>
  <div class="panel">
    <div class="input-group input-group-lg">
      <span class="input-group-addon">Message</span>
      <%= f.text_area :message, class: "form-control", id: "new-ann-message" %>
    </div>
  </div>

  <div class="panel">
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-success btn-block"%>
    </div>
  </div>
<% end %>
