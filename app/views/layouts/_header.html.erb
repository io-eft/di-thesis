<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Eclass", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <li><%= link_to "Home",   root_path %></li>
        <li><a href="/pages/help.html" target="_self">Help</a></li>
        <% if(user_signed_in?) %>
          <% if(current_user.is_admin?) %>
            <li><%= link_to "Manage Users", users_path %></li>
            <li><%= link_to "Manage Courses", courses_path %></li>
          <% elsif(current_user.is_professor?) %>
            <li><%= link_to "View Courses", courses_path %></li>
          <% elsif(current_user.is_undergrad?) %>
            <li><%= link_to "All Courses", courses_path %></li>
            <li><%= link_to "My Courses", my_courses_path %></li>
          <% end %>
          <li><%= link_to "Edit Profile", edit_user_registration_path unless current_user.id == 1 %></li>
          <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign in", user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
