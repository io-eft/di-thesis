<p id="notice"><%= notice %></p>

<h1 class="pull-left">My Courses</h1>
<%= will_paginate @courses %>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Code</th>
    <th colspan="2">Name</th>
    <th style="text-align:left;" colspan="2">Lecturer</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td colspan="2"><%= link_to course.name, course %></td>
        <td style="text-align:left;" colspan="2"><%= "#{@professors[course.id].surname} #{@professors[course.id].name}" %></td>
        <td><%= link_to 'Withdraw', course_withdraw_path(course), data: { confirm: 'Are you sure?'}, :class => "btn bnt-lg btn-danger btn-block" %></td>
        

        <% if false %>
        <td><%= link_to 'Withdraw', course, method: :withdraw, data: { confirm: 'Are you sure?'}, :class => "btn bnt-lg btn-danger btn-block" %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
