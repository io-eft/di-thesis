<h1 class="pull-left">All Courses</h1>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Code</th>
    <th colspan="2">Name</th>
    <th style="text-align:left;" colspan="2">Lecturer</th>
    <th style="text-align:right;" colspan="2">Students Attending</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td colspan="2"><%= link_to course.name, course %></td>
        <td style="text-align:left;" colspan="2"><%= "#{course.lecturer.surname} #{course.lecturer.name}" %></td>
        <td style="text-align:right;" colspan="2"><div style="inline" id='<%= "course_#{course.id}_att" %>'><%= course.students.count %></div></td>
        <td>
          <div style="inline" id='<%= "course_#{course.id}" %>'>
            <%= enroll_or_withdraw(course, current_user) %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @courses, :class => "apple_pagination"  %>
