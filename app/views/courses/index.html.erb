<p id="notice"><%= notice %></p>

<h1>Manage Courses</h1>
<% if(current_user.is_admin?) %>
  <%= render partial: "admin_table" %>
<% elsif(current_user.is_professor?) %>
  <%= render partial: "professor_table" %>
<% else %>
  <%= render partial: "student_table" %>
<% end %>

<% if false %>
<div>Old Part</div>
<%= will_paginate @courses %>
<table class="table">
  <thead>
  <tr>
    <th>Code</th>
    <th colspan="2">Name</th>
    <th style="text-align:left;" colspan="2">Lecturer</th>
    <th style="text-align:right;">Students Attending</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td colspan="2"><%= link_to course.name, course %></td>
        <td style="text-align:left;" colspan="2"><%= "#{@professors[course.id].surname} #{@professors[course.id].name}" %></td>
        <td style="text-align:right;" colspan="2"><%= @attending[course.id] %></td>
        <td>Manage Course</td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @products %>
<% end %>

<% if false %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

  <br>
