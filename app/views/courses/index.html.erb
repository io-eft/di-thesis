<p id="notice"><%= notice %></p>

<h1>Manage Courses</h1>
<%= will_paginate @courses %>
<table class="table">
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th style="text-align:left;">Lecturer</th>
    <th style="text-align:right;">Students Attending</th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td><%= link_to course.name, course %></td>
        <td style="text-align:left;"><%= "#{@professors[course.id].surname} #{@professors[course.id].name}" %></td>
        <td style="text-align:right;"><%= @attending[course.id] %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @products %>


<% if false %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

  <br>

<%= link_to 'New Course', new_course_path, :class => "btn bnt-lg btn-success" %>
