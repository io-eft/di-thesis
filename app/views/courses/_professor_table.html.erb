<h1 class="pull-left">View Courses</h1>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Code</th>
    <th colspan="2">Name</th>
    <th style="text-align:left;" colspan="2">Lecturer</th>
    <th style="text-align:right;" colspan="2">Students Attending</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td colspan="2"><%= link_to course.name, course %></td>
        <td style="text-align:left;" colspan="2"><%= "#{course.lecturer.surname} #{course.lecturer.name}" %></td>
        <td style="text-align:right;" colspan="2"><%= course.students.count %></td>
        <td>
          <% if is_course_professor?(course, current_user.id) %>
            <%= link_to 'Manage', '#', :class => "btn btn-primary btn-block" %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @courses, :class => "apple_pagination" %>
